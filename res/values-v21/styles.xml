<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/main_blue</item>
        <!--ActionBar Background-->
        <item name="android:textColorPrimary">@color/title_white</item>
        <!--ActionBar Text-->
        <item name="android:colorPrimaryDark">@color/main_blue_dark</item>
        <!--StatusBar Background-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:textAppearanceSmall">@style/TextAppearance.Material.Small.Cde</item>

    </style>

    <style name="TextAppearance.Material.Small.Cde" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">12sp</item> <!--As same as Holo Theme-->
    </style>

    <style name="DialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:textColor">@color/title_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/dialog_title_textsize</item>
    </style>

    <style name="MySubTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/actionbar_subtitle</item>
    </style>

    <style name="MyActionBarWidgetThemeStyle">
        <item name="android:textColorHint">@color/actionbar_subtitle</item>
        <item name="android:textColor">@color/title_white</item>
        <item name="android:editTextColor">@color/title_white</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/main_blue</item>
        <item name="android:actionMenuTextColor">@color/title_white</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/MySubTitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_previous_item</item>
    </style>

    <style name="PagerSlidingTabStripStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_strip_height</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/main_blue</item>
    </style>

</resources>
